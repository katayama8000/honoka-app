{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "files": {
    "includes": [
      "**",
      "!.expo/**",
      "!dist/**",
      "!node_modules/**",
      "!build/**",
      "!android/build/**",
      "!ios/build/**",
      "!ios/Pods/**",
      "!modules/**",
      "!types/supabase.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
